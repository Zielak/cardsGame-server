{
  "name": "multiplayer-game",
  "version": "0.1.0",
  "description": "Server side of multiplayer cards game",
  "main": "lib/index",
  "types": "lib/index",
  "scripts": {
    "start": "ts-node src/index.ts",
    "precommit": "npm test && npm run lint",
    "lint": "eslint ./ -f visualstudio",
    "test": "ts-node src/index.ts && ava",
    "test:cover": "ts-node src/index.ts && nyc ava",
    "test:watch": "ts-node src/index.ts && ava --watch"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "colyseus": "^0.9.9",
    "cross-env": "^5.1.6",
    "express": "^4.16.3",
    "serve-index": "^1.9.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "eslint": "^4.19.1",
    "eventemitter3": "^3.1.0",
    "husky": "^0.14.3",
    "nodemon": "^1.17.5",
    "nyc": "^12.0.2",
    "sinon": "^5.1.0",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "include": [
      "app/*",
      "client/*",
      "shared/*"
    ],
    "all": true,
    "reporter": [
      "html",
      "text-summary"
    ],
    "sourceMap": true,
    "report-dir": "./dist/coverage"
  }
}